        width 279px
      }

      .image-wrap {
        padding 0 20px

        img {
          display block
          max-width 100%
          height auto
        }
      }
      .preparate-title {
        z-index 2
        color #fff
        font-size 2.6rem
        height 6rem
        width 100%
        overflow hidden
        font-weight bold
        text-transform uppercase
        font-family font-family-alt
        margin 0
        text-align center
        display inline-flex
        flex-direction column
        align-items center
        justify-content center
      }
      .overlap-link {
        position absolute
        top 0
        right 0
        left 0
        bottom 0
        z-index 4

        @media (min-width: screen-md-min) {
          display none
        }
      }
      .more-link {
        z-index 2
        display inline-block
        color #fff
        font-size 1.8rem
        line-height 2rem
        font-weight 300
        text-decoration none
        border-bottom 1px dashed

        @media (min-width: screen-md-min) {
          font-size 1.4rem
        }

        &:hover {
          border-bottom-color transparent
        }
      }
    }
    .slider-col {
      display none
      flex-grow 1
      padding 7px 11px 0

      @media (min-width: screen-md-min) {
        display block
      }

      .gallery-wrap {
        width 100%
        height 491px
        overflow hidden
        margin-bottom 10px

        &:not(.flickity-enabled) {
          height auto

          .gallery-cell {
            margin-bottom 10px

            &:last-child {
              margin-right 0
            }
          }
          .dosage-cards {
            display block
            min-height 0

            li:last-child {
              margin-right 0
            }
          }
        }

        @media (min-width: (screen-lg - 1)) {
          height 266px
        }
      }
      .gallery-cell {
        width 599px
        float left
        margin-right 11px
        text-align center

        @media (min-width: (screen-lg - 1)) {
          width 155px
        }

        @media (min-width: (screen-lg - 1)) {
          &[data-merge="5"] {
            width 815px
          }
          &[data-merge="4"] {
            width 650px
          }
          &[data-merge="3"] {
            width 486px
          }
          &[data-merge="2"] {
            width 320px
          }
        }

        &.dry {
          .slide-group-header {
            background url(../img/preparetes-slider-group-pattern-dry.png) repeat-x center

            &:before {
              background url(../img/preparetes-slider-group-icon-dry.png) no-repeat 0 0 #fff
            }
          }
          .dosage-cards li {
            border-color brand-secondary
          }
        }
        &.flow {
          .slide-group-header {
            background url(../img/preparetes-slider-group-pattern-flow.png) repeat-x center

            &:before {
              background url(../img/preparetes-slider-group-icon-flow.png) no-repeat 0 0 #fff
            }
          }
          .dosage-cards li {
            border-color brand-primary
          }
        }
      }
      .slide-group-header {
        height 51px
        margin-bottom 5px
        position relative

        &:before {
          position absolute
          content ''
          width 57px
          height 57px
          border 3px solid #fff
          border-radius 50%
          top -3px
          left 50%
          margin-left -26px
        }
      }
      .dosage-cards {
        list-style none
        margin 0
        padding-left 0

        @media (min-width: screen-md-min) and (max-width: (screen-lg - 1)) {
          display flex
          flex-wrap wrap
          align-items center
          justify-content center
          min-height 430px
        }

        li {
          position relative
          width 155px
          height 210px
          display inline-flex
          flex-direction column
          justify-content center
          align-items center
          margin 0 15px 15px
          border 1px solid transparent
          color #4c4c4c
          font-size 1.3rem
          line-height 2rem
          font-weight 300
          text-align center
          vertical-align top
          background-image linear-gradient(to bottom, #fff 0, rgba(255,255,255,0) 100%)
          transition background-color .15s ease-in-out, padding .15s ease-in-out

          @media (min-width: (screen-lg - 1)) {
            margin 0 6px 0 0

            &:last-child {
              margin-right 0
            }
          }

          strong {
            font-weight 700
            font-size 1.8rem
            display block
            text-align center
          }
          .btn {
            position absolute
            bottom 14px
            left 13px
            padding-left 15px
            width 128px
            transition opacity .15s ease-in-out, transform .15s ease-in-out
            opacity 0
            transform translateY(-10px)
          }

          &:hover,
          &:focus {
            padding-bottom 50px
            background-color rgba(0,0,0,.05)

            .btn {
              opacity 1
              transform translateX(0)
            }
          }
        }
        .card-head {
          width 110px
          border-bottom 1px solid #c6c6c6
          padding-bottom 12px
          margin-bottom 12px
        }
      }
      .more-link {
        float right
        text-decoration none
        text-transform uppercase
        color #15accb
        border-bottom 1px dashed
        font 300 1.6rem/2.4rem font-family-alt
        margin-bottom 10px

        .inline-icon {
          vertical-align top
          margin-left 3px
        }

        &:hover {
          border-bottom-color transparent
        }
      }
    }
  }
}

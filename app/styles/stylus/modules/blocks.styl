        padding 38px 28px 38px 42px
        color #4c4c4c

        @media (min-width: screen-md-min) {
          padding 47px 75px 0 60px
        }
        @media (min-width: (screen-lg - 1)) {
          padding 56px 135px 0 52px
        }

        h3 {
          font-size 2.6rem
          line-height 1
          text-transform uppercase
          color inherit
          margin 0

          @media (min-width: screen-md-min) {
            margin-bottom 24px
          }
          @media (min-width: (screen-lg - 1)) {
            margin-bottom 30px
          }

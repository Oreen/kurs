          color inherit
          font-size 1.6rem
          line-height 2.5rem
          font-weight 300
          margin-bottom 24px
          display none

          @media (min-width: screen-md-min) {
            display block
          }
        }
        .more-link {
          font-size 1.8rem
          line-height 2.4rem
          font-weight 300
          font-family font-family-alt
          display none
          color #15accb
          text-transform uppercase
          text-decoration none
          border-bottom 1px dashed

          [class~="inline-icon"] {
            vertical-align top
            margin-left 10px
          }

          @media (min-width: screen-md-min) {
            display inline-block
